public class ClientForPawn
{
    public void movePawn(String moveFrom,String moveTo)throws GridOutOfBoardException,WrongMoveException,GoodGameException
    {
        Board b=new Board();
        Pawn p1=new Pawn();
        Grid from= b.getGrid(moveFrom);
        Grid to= b.getGrid(moveTo);
        int checkRow=Pawn.conversion(moveFrom.substring(1,2));
        boolean checkInitialB=false;
        boolean checkInitialW=false;
        boolean checkB=false;
        boolean checkW=false;
        if(from.p.getColour()==true&&checkRow==1)
        {
            checkInitialB=p1.checkFirstMovePawn(moveFrom,moveTo);
        }
        if(from.p.getColour()==false&&checkRow==6)
        {
            checkInitialW=p1.checkFirstMovePawn(moveFrom,moveTo);
        }
        if(from.p.getColour()==true&&!(checkRow==1))
        {
            checkB=p1.checkMovePawn(moveFrom,moveTo);
        }
        if(from.p.getColour()==false&&!(checkRow==6))
        {
            checkW=p1.checkMovePawn(moveFrom,moveTo);
        }
        
        if(checkB==true)
        {
            b.move(from,to);
        }
        if(checkW==true)
        {
            b.move(from,to);
        }
        if(checkInitialB==true)
        {
            b.move(from,to);
        }
        if(checkInitialW==true)
        {
            b.move(from,to);
        }
        b.printBoard();
    }
}
